<?xml version="1.0" encoding="utf-8"?>
<RestraintLayout
    id="@+id/rl_list_page_outer"
    width="fill"
    height="fill">

    <Button
        id="@+id/bt_dwm_button"
        width="auto"
        height="auto"
        margin="12, 12"
        text="Scroll down"
        handle_start="@id/rl_list_page_outer"
        handle_top="@id/rl_list_page_outer" />

    <ListView
        id="@+id/lv_list_page_list"
        width="fill"
        height="fill"
        margin="8, 8, 8, 8"
        handle_start="@id/rl_list_page_outer"
        handle_top="@id/bt_dwm_button, bottom"
        handle_end="@id/rl_list_page_outer"
        handle_bottom="@id/rl_list_page_outer" />

</RestraintLayout>